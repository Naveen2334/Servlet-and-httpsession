<!DOCTYPE web-app PUBLIC
 "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
 "http://java.sun.com/dtd/web-app_2_3.dtd" >

<web-app>
  <display-name>Archetype Created Web Application</display-name>
  <welcome-file-list>
  	<welcome-file>login.jsp</welcome-file>
  </welcome-file-list>
  <!-- configuration controller for login -->
  <servlet>
  	<servlet-name>login</servlet-name>
  	<servlet-class>com.jsp.servlet_httpsession_1pm.controller.LoginController</servlet-class>
  </servlet>
  <servlet-mapping>
  	<servlet-name>login</servlet-name>
  	<url-pattern>/loginUser</url-pattern>
  </servlet-mapping>
  
  <!-- configuration controller for about -->
  <servlet>
  	<servlet-name>about</servlet-name>
  	<servlet-class>com.jsp.servlet_httpsession_1pm.controller.AboutController</servlet-class>
  </servlet>
  <servlet-mapping>
  	<servlet-name>about</servlet-name>
  	<url-pattern>/aboutus</url-pattern>
  </servlet-mapping>
  
   <!-- configuration controller for logout -->
  <servlet>
  	<servlet-name>logout</servlet-name>
  	<servlet-class>com.jsp.servlet_httpsession_1pm.controller.LogoutController</servlet-class>
  </servlet>
  <servlet-mapping>
  	<servlet-name>logout</servlet-name>
  	<url-pattern>/logoutus</url-pattern>
  </servlet-mapping>
</web-app>
