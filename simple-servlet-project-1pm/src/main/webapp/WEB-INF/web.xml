<!DOCTYPE web-app PUBLIC
 "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
 "http://java.sun.com/dtd/web-app_2_3.dtd" >

<web-app>
  <display-name>Archetype Created Web Application</display-name>
  
  <welcome-file-list>
  	<welcome-file>home.jsp</welcome-file>
  </welcome-file-list>
  
  <!-- addition controller configuration -->
  <servlet>
  	<servlet-name>add</servlet-name>
  	<servlet-class>com.jsp.simple_servlet_project_1pm.controller.AdditionController</servlet-class>
  </servlet>
  <servlet-mapping>
  	<servlet-name>add</servlet-name>
  	<url-pattern>/doAddition</url-pattern>
  </servlet-mapping>
  
  <!-- register controller configuration -->
  <servlet>
  	<servlet-name>userregister</servlet-name>
  	<servlet-class>com.jsp.simple_servlet_project_1pm.controller.RegisterController</servlet-class>
  </servlet>
  <servlet-mapping>
  	<servlet-name>userregister</servlet-name>
  	<url-pattern>/register</url-pattern>
  </servlet-mapping>
  
  <!-- delete controller configuration -->
  <servlet>
  	<servlet-name>userdelete</servlet-name>
  	<servlet-class>com.jsp.simple_servlet_project_1pm.controller.DeleteController</servlet-class>
  </servlet>
  <servlet-mapping>
  	<servlet-name>userdelete</servlet-name>
  	<url-pattern>/delete</url-pattern>
  </servlet-mapping>
  
   <!-- update controller configuration -->
  <servlet>
  	<servlet-name>userupdate</servlet-name>
  	<servlet-class>com.jsp.simple_servlet_project_1pm.controller.UpdateController</servlet-class>
  </servlet>
  <servlet-mapping>
  	<servlet-name>userupdate</servlet-name>
  	<url-pattern>/update</url-pattern>
  </servlet-mapping>
  
   <!-- display controller configuration -->
  <servlet>
  	<servlet-name>userDisplay</servlet-name>
  	<servlet-class>com.jsp.simple_servlet_project_1pm.controller.DisplayEmployeeController</servlet-class>
  </servlet>
  <servlet-mapping>
  	<servlet-name>userDisplay</servlet-name>
  	<url-pattern>/display</url-pattern>
  </servlet-mapping>
</web-app>
